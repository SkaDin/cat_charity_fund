    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload"
            ],
            "env": {
                "FASTAPI_ENV": "development"
            },
            "postDebugTask": "killFastAPI"
        }
    ],
    "tasks": {
        "version": "2.0.0",
        "tasks": [
            {
                "label": "killFastAPI",
                "type": "shell",
                "command": "kill $(lsof -t -i:8000)"
            }
        ]
    }
}